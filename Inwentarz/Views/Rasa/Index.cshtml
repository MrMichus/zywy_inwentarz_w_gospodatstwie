@model IEnumerable<Inwentarz.Models.Rasa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rasy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nową rasę</a>
</p>

<!-- Formularz filtrowania -->
<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="gatunekFilter">Filtruj po gatunku:</label>
        <input type="text" name="gatunekFilter" value="@ViewData["CurrentFilter"]" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info">Filtruj</button>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gatunek)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SortByName"]">
                    @Html.DisplayNameFor(model => model.NazwaRasy)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Gatunek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NazwaRasy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RasyId" class="btn btn-warning btn-sm">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.RasyId" class="btn btn-info btn-sm">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.RasyId" class="btn btn-danger btn-sm">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
