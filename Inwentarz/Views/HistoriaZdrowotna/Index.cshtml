@model IEnumerable<Inwentarz.Models.HistoriaZdrowotna>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Diagnoza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDiagnozy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zwierze)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leczenie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnoza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDiagnozy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zwierze.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leczenie.LeczenieId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RekordId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RekordId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RekordId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
